#include <stdio.h>
char a[100], b[100];
int n, m, dp[101][101];
int min(int x, int y, int z) {
int t = (x < y) ? x : y;
return (t < z) ? t : z;
}
int main() {
scanf("%s %s", a, b);
n = 0; while (a[n]) n++;
m = 0; while (b[m]) m++;
for (int i = 0; i <= n; i++) dp[i][0] = i;
for (int j = 0; j <= m; j++) dp[0][j] = j;
for (int i = 1; i <= n; i++) {
for (int j = 1; j <= m; j++) {
if (a[i-1] == b[j-1]) dp[i][j] = dp[i-1][j-1];
else dp[i][j] = 1 + min(dp[i-1][j], dp[i][j-1], dp[i-1][j-1]);
}
}
printf("%d\n", dp[n][m]);
return 0;
}
